{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!
{% endblock %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">id</th>
				<th scope="col">Email</th>
				<th scope="col">Name</th>
				<th scope="col">Adress</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>id:
					{{user.id}}</td>
				<td>email:
					{{user.email}}
				</td>
				<td>name:
					{{user.name}}</td>
				<td>adress:
					{{user.adress}}</td>
				<td>
					<a href="{{ path('app_profil_edit', {'id': user.id}) }}" class="btn btn-warning">edit</a>
				</td>
			</tr>
		</tbody>
	</table>

{% endblock %}
